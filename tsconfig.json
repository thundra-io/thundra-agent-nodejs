{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es6",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "lib": [
            "es5",  
            "es6"
        ],
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": false
    },
    "include": [
        "src"
    ]
}
